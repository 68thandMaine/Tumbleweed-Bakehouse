@{
  Layout = "_Layout";
}
<div class='row'>

  <div class='col-md-4'>
    <h3>Orders</h3>

    @if (Model.Count != 0)
    {
      @foreach (var product in Model)
      {
        <a href='/products/@product.GetId()'>@product.GetProductName()</a>
        <div class="form-group">
          <input type="checkbox" name="toppings" id="pineapple" value="pineapple">
          <label for="pineapple">pineapple</label>
        </div>
      }
    }
  </div>

</div>
