@{
  Layout = "_Layout";
}
<div class='row'>
  <div class='col-md-12'>
    <h3>Customer:</h3>
    <p>@Model.GetFirstLast()</p>
    <h4>Phone:</h4>
    <p>@Model.GetPhoneNumber()</p>
    <h4>Email:</h4>
    <p>@Model.GetEmail()</p>
    <h4>Address:</h4>
    <p>@Model.GetAddress()</br>
      @Model.GetCity(), @Model.GetState() @Model.GetZip()</p>
  </div>
  
