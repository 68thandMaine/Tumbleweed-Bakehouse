@{
  Layout = "_Layout";
}

<div id='row'>
  <div class='col-md-6'>
    <h3>Customer: @Model["customer"].GetFirstLast()</h3>

    <h4>Phone: @Model["customer"].GetPhoneNumber()</h4>
    <h4>Email: @Model["customer"].GetEmail()</h4>
    <h4>Home Address: @Model["customer"].GetAddress()</h4>
    <h4>City: @Model["customer"].GetCity()</h4>
    <h4>State: @Model["customer"].GetState()</h4>
    <h4>Zipcode: @Model["customer"].GetZip()</h4>

    <form action="/customer/@Model["customer"].GetId()/edit">
      <button type="submit">Edit your information</button>
    </form>
  </div>

  <div class='col-md-6'>
    <h3>Order History:</h3>
    @if( @Model.Count != 0)
    {
      <ol>@foreach (var order in @Model["orders"])
        {
          <li>Order number: @order.OrderNumber <br> Order Date: @order.ReceivedDate.ToString("MM/dd/yyyy")</li>
        }
      </ol>
    }
    </div>
  </div>
</div>
