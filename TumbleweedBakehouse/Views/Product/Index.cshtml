@{
  Layout = "_Layout";
}
<div class='row productRow'>

    @if (Model.Count != 0)
    {
      @foreach (var product in Model)
      {
      <div class="productGridItem col-md-4" class="clickable" data-toggle="modal" data-target="#addToOrder">
        <img src="/img/Challah.JPG" alt="photo of @product.GetProductName()">
        <p class=" clickable">@product.GetProductName()</p>
        <p>$@product.GetPrice()</p>
      </div>
      }
    }

</div>

<!-- Modified Bootstrap Modal From https://getbootstrap.com/docs/4.0/components/modal/ -->
<div class="modal fade" id="addToOrder" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="">@Model[0].GetProductName()</h5>
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="">
          <img src="/img" alt="photo of @Model[0].GetProductName()">
          <p>@Model[0].GetProductName()</p>
          <p>$@Model[0].GetPrice()</p>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
