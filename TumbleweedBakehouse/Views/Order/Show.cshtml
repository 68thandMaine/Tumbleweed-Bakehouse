@using TumbleweedBakehouse.Models;

@{
    Layout = "_Layout";
}

<div id='show'>
  <div id="showText">
    <h3>Your Order Number: @Model["thisOrder"].OrderNumber</h3>

    <p>Order Recieved: @Model["thisOrder"].ReceivedDate</p>
    <p>Pickup Location: @Model["thisOrder"].PickupLocation</p>
    <p>Date Delivered: @Model["thisOrder"].DeliveredDate</p>

    @if (Model.Count == 0)
    {
    <p>There are no orders placed at this time.</p>
    }
    else
    {
      <p>Orders:</p>
      @foreach (var product in @Model["thisOrder"].GetProductsInOrder())
      {

        <p><a href="/product/@product.GetId()">@product.GetProductName()</a></p>

      }
    }

    <p>
      <a href="/order/@Model["thisOrder"].Id/edit">Edit this order</a>
    </p>
    </div>
</div>
