@using  TumbleweedBakehouse.Models;

@{
    Layout = "_Layout";
}
<div class='row'>
    <div class='col-md-6'>
        <h3>Your Order Number: @Model["thisOrder"].OrderNumber</h3>


        <h5>Order Recieved: @Model["thisOrder"].ReceivedDate</h5>
        <h5>Pickup Location: @Model["thisOrder"].PickupLocation</h5>
        <h5>Date Delivered: @Model["thisOrder"].DeliveredDate</h5>

        <div class="col-md-12">
            <table class="table-striped">
                <tr>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>


                </tr>
                @foreach (var product in Model["orderInventory"])
                {
                    <tr>
                        <td><a href="/products/@product.GetId()">@product.GetProductName()</a></td>
                        <td>  @Model["thisOrder"].GetProductsQTYInOrder(@product.GetId())</td>
                        <td> $@product.GetPrice().ToString("0.00")</td>
                        <td> $@((product.GetPrice() * @Model["thisOrder"].GetProductsQTYInOrder(@product.GetId())).ToString("0.00"))</td>
                    </tr>

                }
                <tr>
                    <td></td>
                    <td></td>
                    <td>Grand Total:</td>
                    <td>$@Model["thisOrder"].GrandTotal().ToString("0.00")</td>
                </tr>
            </table>
        </div>
        <p><a href="/order/@Model["thisOrder"].Id/edit">Edit this order</a></p>
    </div>
</div>
